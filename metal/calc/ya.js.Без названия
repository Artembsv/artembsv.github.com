      return (data);   
    });              
     
    

  }    


 function getYaAdrInfo_old(addr,search,count,id_out) 
 {
    /* search = 'metro', // метро
                'district', // округ
                'house', // дом
                'street', // улица
                'locality' // населённый пункт
   */                
    $('#map').html('');
    ymaps.geocode(addr, { results: 1 }).then(function (res) 
    {   var metrostans='';
        var firstGeoObject = res.geoObjects.get(0),
            myMap = new ymaps.Map("map", 
            {
                center: firstGeoObject.geometry.getCoordinates(),
                zoom: 12
            });
        ymaps.geocode(myMap.getCenter(), 
        {
            kind: search,
            boundedBy: myMap.getBounds(),
            results: count
        }).then(function (res) 
        {
            res.geoObjects.each(function (obj) 
            {
              if(metrostans != '') metrostans = metrostans + ', ';
              metrostans = metrostans+obj.properties.get('name');
            });
            $("#"+id_out).html(metrostans); 
        });
    });
  }    